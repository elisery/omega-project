<html>
  <head>
    <title>OmegaProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_pack_tag 'application' %>

    <style>
    footer {
      height: 100px;
      display: flex;
      justify-content: flex-start;
      align-items: center;
    }
    .bottom-links{
      display: flex;
      justify-content: center;
    }
    .container {
      display: flex;
      width: 960px;
    }
    .auth-link {
      height: 40px;
      margin-right: 16px;
      vertical-align: middle;
    }
    </style>
  </head>

  <body style="">
    <header>
      <nav class="navbar navbar-default navbar-reverse navbar-expand-sm navbar-light bg-light border-bottom-2">
        <a class="navbar-brand text-dark" href="/directory">{ company logo }</a>
        <div class="collapse navbar-collapse topnav justify-content-end">
          <ul class="nav navbar-nav navbar-right ">       
      <nav class="navbar navbar-default navbar-reverse navbar-expand-sm border-bottom-2">
      <a class="navbar-brand" href="/"><%= image_tag("click-cloud-bright-blue.png", style: "max-width:70px; margin-top: -7px;") %></a>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
        
        <div class="collapse navbar-collapse topnav justify-content-end" id="navbarNavAltMarkup">
          <ul class="nav navbar-nav navbar-right ">      
            <% if user_signed_in? %>
              <!-- -->
            <% end %>
            <% if current_user.present? %>
              <span>Hi, <%= current_user.full_name %></span> 
            <% end %>
            <li class="nav-item mr-4"><a class="nav-link"<%= link_to 'Directory', home_path %></a></li>
            <li class="nav-item mr-4"><a class="nav-link"<%= link_to 'Events', events_path %></a></li>
            <li class="nav-item mr-4"><a class="nav-link"<%= link_to 'News', news_index_path %></a></li>
            
              <li class="nav-item mr-4"><a class="nav-link text-white"> Admin Panel: </a></li>
              <li class="nav-item mr-4"><a class="nav-link"<%= link_to 'Organizations', admin_dashboard_index_path %></a></li>
              <li class="nav-item mr-4"><a class="nav-link"<%= link_to 'Events', admin_events_path %></a></li>
              <li class="nav-item mr-4"><a class="nav-link"<%= link_to 'News', admin_news_index_path %></a></li>
              <li class="nav-item mr-4"><a class="nav-link"<%= link_to 'Users', admin_users_path %></a></li>
              <li class="nav-item mr-4"><a class="nav-link"<%= link_to 'Technologies', admin_technologies_path %></a></li>
            
          <ul>
        </div>
      </nav>
    </header>


    <div class="container-fluid">
      <div style="margin-top: 100px;">
        <% flash.each do |type, message| %>
          <div class="alert alert-<%= type %> alert-dismissible fade show">
            <%= message %>
          </div>
        <% end %>

        <%= yield %>
      </div>
    </div>
    
  </body>

<!--Footer-->
  
  <footer>
    <div class="container bottom-links">
      <% if current_user.present? %>
        <%= link_to(
          'Sign Out',
          session_path, 
          method: :delete, 
          class:"btn btn-outline-light"
        ) %>
      <% else %>
        <a href="/users/new" class="btn btn-outline-light auth-link">Sign Up</a>
        <a href="/session/new" class="btn btn-outline-light auth-link">Sign In</a>
      <% end %>
    </div>
  </footer>
    
</html>