<html>
  <head>
    <title>OmegaProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_pack_tag 'application' %>

    <style>
    footer {
      height: 100px;
      display: flex;
      justify-content: flex-start;
      align-items: center;
    }
    .bottom-links{
      display: flex;
      justify-content: center;
    }
    .container {
  
      width: 960px;
    }
    .auth-link {
      height: 40px;
      margin-right: 16px;
      vertical-align: middle;
    }
    </style>
  </head>

  <body style="">
    <header>
      <nav class="navbar navbar-light navbar-expand-lg">
        <a class="navbar-brand" href="/">
          <%= image_tag("click-cloud-bright-blue.png", style: "max-width:70px; margin-top: -7px;") %>
        </a>
        
        <div class="navbar-nav">
          <ul class="nav navbar-nav navbar-right">      
            <% if current_user.present? %>
              <span class="ml-2 mt-2 mr-3">Hi, <%= current_user.full_name %></span> 
            <% end %>
            <% if controller.class.parents.include?(Admin) %>
              <%= render partial: "partials/admin_header" %>
            <% else %>
              <%= render partial: "partials/header" %>
            <% end %>
          <ul>
        </div>
      </nav>
    </header>

    <div class="container-fluid">
      <div style="margin-top: 100px;">
        <% flash.each do |type, message| %>
          <div class="alert alert-<%= type %> alert-dismissible fade show">
            <%= message %>
          </div>
        <% end %>
        <%= yield %>
      </div>
    </div>
    
  </body>

<!--Footer-->
  
  <footer>
    <div class="container bottom-links">
      <% if current_user.present? %>
        <%= link_to(
          'Sign Out',
          session_path, 
          method: :delete, 
          class:"btn btn-outline-dark"
        ) %>
      <% else %>
        <a href="/users/new" class="btn btn-outline-dark auth-link">Sign Up</a>
        <a href="/session/new" class="btn btn-outline-dark auth-link">Sign In</a>
      <% end %>
    </div>
  </footer>
    
</html>