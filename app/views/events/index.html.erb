<div>
    <h1>Events</h1>
</div>

<div class="wrapper">
    <div class="calendar">
        <%= month_calendar events: @events do |date, events| %>
            <%= date.day %>

            <% events.each do |event| %>
                <div>
                    <%= event.title %>
                </div>
            <% end %>
        <% end %>
    </div>

    <div class="search-event">
        <%= form_tag(events_path, method: :get, id: "search", name: "search", class: "form-inline my-2 my-lg-0") do %>
            <%= text_field_tag :search, params[:search], placeholder: "Search Events", class: "form-control mr-sm-2" %>
            <%= submit_tag "Search", name: nil, class: "btn btn-outline-dark" %>
        <% end %>
    </div>



<div>
  <% @meetups.each do |meetup| %>
    <div class="card" >
        <ul>
            <li>
                <h3>
                    <%= meetup['name'] %>
                </h3>  
                <small>
                    on <%= Time.at(meetup['time'] / 1000).to_date%> 
                </small> 
                <small>
                    @ <%= Time.at(meetup['time'] / 1000).strftime("%I:%M%P") %> 
                </small> 

            </li>
        </ul>
    </div>
  <% end %>
</div>
