<div class="container">
  <h2>Technologies</h2>
  
  <table class="table table-borderless">
    <thead>
      <tr>
        <th scope="col">Technology Name</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @tag.each do |te| %>
      <tr id="<%= t.id %>">
        <td>
          <%= t.name %>
        </td>
        <td>
          <p>
            <%= link_to(
              "Remove",
              admin_technologies_path(t.id),
              method: :delete
            ) %>
          </p>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>