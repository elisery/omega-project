<div class="container">
  <h2>Events</h2>
  <%= form_for( @meetup_group, :url => admin_events_path, :method => :post) do |f| %>

    <div>
      <%= f.label("Meetup ID") %>
      <%= f.text_field(:name) %>
      <%= f.submit %>
    </div>
  <% end %>

  
  <table class="table table-borderless">
    <thead>
      <tr>
        <th scope="col">Source</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @meetup_groups.each do |m| %>
      <tr id="<%= m.id %>">
        <td>
          <%= m.name %>
        </td>
        <td>
          <p>
            <%= link_to(
              "Remove",
              admin_event_path(m.id),
              method: :delete
            ) %>
          </p>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>