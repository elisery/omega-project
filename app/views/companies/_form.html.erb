
<div class="container-fluid mt-3 jumbotron">
  <%= form_for(@company) do |f| %>

    <% if @company.errors.present? %>
      <p>
        <%= @company.errors.full_messages.join(', ') %>
      </p>
    <% end %>
  
    <div class="form-group mr-3">
      <%= f.label(:name, class:'ml-3') %>
      <%= f.text_field(:name, class: 'form-control' ) %>
    </div>
  
    <div class="form-group mr-3">
      <%= f.label(:address, class:'ml-3') %>
      <%= f.text_area(:address, class: 'form-control') %>
    </div>

    <div class="form-group mr-3">
      <%= f.label(:overview, class:'ml-3') %>
      <%= f.text_area(:overview, class: 'form-control') %>
    </div>

    <div class="form-group mr-3">
      <%= f.label(:number_employees, class:'ml-3') %>
      <%= f.text_field(:number_employees, class: 'form-control') %>
    </div>

    <div class="form-group mr-3">
      <%= f.label(:tech_team_size, class:'ml-3') %>
      <%= f.text_field(:tech_team_size, class: 'form-control') %>
    </div>

    <div class="form-group mr-3">
      <%= f.label(:website_url, class:'ml-3') %>
      <%= f.text_field(:website_url, class: 'form-control') %>
    </div>

    
    <div class="form-group mr-3">
      <%= f.label("Tech Stack", class:'ml-3 mr-2') %>
      <%= f.collection_select(
        :tag_ids,
        Tag.order(name: :asc), 
        :id, 
        :humanized_name,
        {},
        {multiple: :true, class: 'chosen-select form-control'}
      ) %>
    </div>

    <div class="form-group mr-3">
      <%= f.label(:twitter, class:'ml-3') %>
      <%= f.text_field(:twitter, class: 'form-control') %>
    </div>

    <div class="form-group mr-3">
      <%= f.label(:logo_url, class:'ml-3') %>
      <%= f.text_field(:logo_url, class: 'form-control') %>
    </div>

    <div class="form-group mr-3">
      <%= f.label(:manager, class:'ml-3') %>
      <%= f.text_field(:manager, class: 'form-control') %>
    </div>

    
    
    <div class="field form-group mr-3 ml-3">
        <%= f.label "Published" %> <br />
        <%= f.check_box :published, {}, true, false %> <br />
    </div>
 

    <div class="form-group ml-3">
      <%= f.submit 'Submit', :class => 'btn btn-outline-primary' %>
    </div>
    <% end %>
  </div>

